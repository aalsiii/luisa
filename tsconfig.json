{
  "compilerOptions": {
    "target": "ES2020",                  // modern runtime features; change to "ESNext" if you prefer
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,                     // set false if you don't use .js files
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",      // "node" is an alternative if you see editor/tsserver issues
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",                     // helpful for path aliases
    "plugins": [{ "name": "next" }],
    "paths": { "@/*": ["./*"] }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
